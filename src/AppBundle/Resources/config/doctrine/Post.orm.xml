<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Post" table="post">
    <indexes>
      <index name="fk_post_post_type1_idx" columns="post_type_id"/>
      <index name="fk_post_user1_idx" columns="user_id"/>
      <index name="fk_post_team1_idx" columns="team_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="creationDate" type="datetime" column="creation_date" nullable="true"/>
    <field name="content" type="text" column="content" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="goalsNbr" type="integer" column="goals_nbr" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="passNbr" type="integer" column="pass_nbr" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="postType" target-entity="PostType" fetch="LAZY">
      <join-columns>
        <join-column name="post_type_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="team" target-entity="Team" fetch="LAZY">
      <join-columns>
        <join-column name="team_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="userShare" target-entity="User" inversed-by="postShare" fetch="LAZY">
      <join-table name="user_shares_post">
        <join-columns>
          <join-column name="post_share_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_share_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
