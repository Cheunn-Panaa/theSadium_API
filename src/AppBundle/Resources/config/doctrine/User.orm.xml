<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\User" table="user">
    <indexes>
      <index name="fk_user_sexe_idx" columns="sexe_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstname" type="string" column="firstname" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastname" type="string" column="lastname" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="birthdate" type="date" column="birthdate" nullable="true"/>
    <field name="profilePicture" type="string" column="profile_picture" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="password" type="string" column="password" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="creationDate" type="datetime" column="creation_date" nullable="false"/>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="loginProvider" type="string" column="login_provider" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="token" type="string" column="token" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="privateToken" type="string" column="private_token" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="uniqueId" type="string" column="unique_id" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastLogin" type="datetime" column="last_login" nullable="false"/>
    <many-to-one field="sexe" target-entity="Sexe" fetch="LAZY">
      <join-columns>
        <join-column name="sexe_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="playerFollow" target-entity="Player" inversed-by="userFollow" fetch="LAZY">
      <join-table name="user_follows_player">
        <join-columns>
          <join-column name="user_follow_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="player_follow_id" referenced-column-name="user_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="postShare" target-entity="Post" mapped-by="userShare" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
